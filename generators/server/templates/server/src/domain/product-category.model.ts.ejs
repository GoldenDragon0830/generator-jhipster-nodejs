import { Entity, PrimaryGeneratedColumn, ObjectIdColumn, Column } from 'typeorm';
import { BaseModel } from './base/base.model';

@Entity('product-category')
export class ProductCategory extends BaseModel {
  @Column() name?: string;
  @Column() description?: string;
}

export const defaultValue: Readonly<ProductCategory> = {};

export const productCategorySchema = {
  id: { type: 'string', required: false, example: '1' },
  name: { type: 'string', required: false, example: 'categoria' },
  description: { type: 'string', required: false, example: 'La Categoria' },
};
