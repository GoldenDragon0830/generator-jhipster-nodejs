import { config } from '../config';

const issuerUri = process.env.NODE_CLIENT_PROVIDER_OIDC_ISSUER_URI || config.get('jhipster.security.oauth2.client.provider.oidc.issuer-uri');
const port = process.env.NODE_SERVER_PORT || config.get('server.port');
const callback = process.env.NODE_CLIENT_PROVIDER_OIDC_CALLBACK_URL || `http://localhost:${port}/login/oauth2/code/oidc`;

let oauth2Config = {
    authorizationURL: `${issuerUri}/protocol/openid-connect/auth`,
    tokenURL: `${issuerUri}/protocol/openid-connect/token`,
    userInfoUrl: `${issuerUri}/protocol/openid-connect/userinfo`,
    logoutUrl: `${issuerUri}/protocol/openid-connect/logout`,
    callbackURL: callback,
    isOktaProvider: false,
};

if (issuerUri.includes('okta')) {
    oauth2Config = {
        authorizationURL: `${issuerUri}/v1/authorize`,
        tokenURL: `${issuerUri}/v1/token`,
        userInfoUrl: `${issuerUri}/v1/userinfo`,
        logoutUrl: `${issuerUri}/v1/logout`,
        callbackURL: callback,
        isOktaProvider: true,
    };
}


export { oauth2Config };
