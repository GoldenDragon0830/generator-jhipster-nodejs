<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId><%= packageName %></groupId>
    <artifactId><%= dasherizedBaseName %></artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name><%= humanizedBaseName %></name>

    <!-- jhipster-needle-distribution-management -->

    <properties>
        <!-- Build properties -->
        <node.version>v<%= NODE_VERSION %></node.version>
    <%_ if (clientPackageManager === 'npm') { _%>
        <npm.version><%= NPM_VERSION %></npm.version>
    <%_ } _%>
    <%_ if (clientPackageManager === 'yarn') { _%>
        <yarn.version>v<%= YARN_VERSION %></yarn.version>
    <%_ } _%>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.build.timestamp.format>yyyyMMddHHmmss</maven.build.timestamp.format>
    </properties>
    <dependencies> </dependencies>

            <build>
                    <plugins>
                        <plugin>
                            <groupId>com.github.eirslett</groupId>
                            <artifactId>frontend-maven-plugin</artifactId>
                            <configuration>
                                    <installDirectory>${basedir}</installDirectory>
                                </configuration>
                            <executions>
        <%_ if (clientPackageManager === 'yarn') { _%>
                                <execution>
                                    <!-- optional: default phase is "generate-resources" -->
                                    <id>install node and yarn</id>
                                    <goals>
                                        <goal>install-node-and-yarn</goal>
                                    </goals>
                                    <configuration>
                                        <nodeVersion>${node.version}</nodeVersion>
                                        <yarnVersion>${yarn.version}</yarnVersion>
                                    </configuration>
                                </execution>
                                <%_ if (!skipClient) { _%>
                                 <!-- install client part-->
                                <execution>
                                    <id>yarn install client</id>
                                    <goals>
                                        <goal>yarn</goal>
                                    </goals>
                                </execution>
                                <%_ } _%>
                                <!-- install server part-->
                                <execution>
                                        <id>yarn install server</id>
                                    <goals>
                                        <goal>yarn</goal>
                                    </goals>
                                    <configuration>
                                            <workingDirectory>server</workingDirectory>
                                    </configuration>
                                </execution>

        <%_ } else if (clientPackageManager === 'npm') { _%>
                                <execution>
                                    <!-- optional: default phase is "generate-resources" -->
                                    <id>install node and npm</id>
                                    <goals>
                                        <goal>install-node-and-npm</goal>
                                    </goals>
                                    <configuration>
                                        <nodeVersion>${node.version}</nodeVersion>
                                        <npmVersion>${npm.version}</npmVersion>
                                    </configuration>
                                </execution>
                                <%_ if (!skipClient) { _%>
                                    <!-- install client part-->
                                <execution>
                                    <id>npm install client</id>
                                    <goals>
                                        <goal>npm</goal>
                                    </goals>
                                </execution>
                                <%_ } _%>
                                    <!-- install server part-->
                                <execution>
                                        <id>npm install server</id>
                                        <goals>
                                            <goal>npm</goal>
                                        </goals>
                                        <configuration>
                                            <workingDirectory>server</workingDirectory>
                                        </configuration>
                                 </execution>
        <%_ } _%>
                                <%_ if (!skipClient) { _%>
                                <execution>
                                    <id>webpack client prod build</id>
                                    <phase>compile</phase>
                                    <goals>
                                        <goal><%= clientPackageManager %></goal>
                                    </goals>
                                    <configuration>
                                        <arguments>run webpack:prod</arguments>
                                        <environmentVariables>
                                            <APP_VERSION>${project.version}</APP_VERSION>
                                        </environmentVariables>
        <%_ if (clientPackageManager === 'yarn') { _%>
                                        <yarnInheritsProxyConfigFromMaven>false</yarnInheritsProxyConfigFromMaven>
        <%_ } else if (clientPackageManager === 'npm') { _%>
                                        <npmInheritsProxyConfigFromMaven>false</npmInheritsProxyConfigFromMaven>
        <%_ } _%>
                                    </configuration>
                                </execution>
                                <%_ } _%>
                            </executions>
                        </plugin>
                    </plugins>
            </build>
    <profiles>
        <profile>
            <id>dev</id>
            <build>
                    <plugins>
                        <plugin>
                            <groupId>com.github.eirslett</groupId>
                            <artifactId>frontend-maven-plugin</artifactId>
                            <configuration>
                                    <installDirectory>${basedir}</installDirectory>
                                </configuration>
                            <executions>
                                    <execution>
                                            <id>server dev running</id>
                                            <phase>package</phase>
                                            <goals>
                                                <goal><%= clientPackageManager %></goal>
                                            </goals>
                                            <configuration>
                                                <workingDirectory>server</workingDirectory>
                                                <arguments>run start</arguments>
                                                <environmentVariables>
                                                    <APP_VERSION>${project.version}</APP_VERSION>
                                                </environmentVariables>
                <%_ if (clientPackageManager === 'yarn') { _%>
                                                <yarnInheritsProxyConfigFromMaven>false</yarnInheritsProxyConfigFromMaven>
                <%_ } else if (clientPackageManager === 'npm') { _%>
                                                <npmInheritsProxyConfigFromMaven>false</npmInheritsProxyConfigFromMaven>
                <%_ } _%>
                                            </configuration>
                                        </execution>
                            </executions>
                        </plugin>
                    </plugins>
             </build>
        </profile>
        <profile>
            <id>prod</id>
            <build>
                    <plugins>
                        <plugin>
                            <groupId>com.github.eirslett</groupId>
                            <artifactId>frontend-maven-plugin</artifactId>
                            <configuration>
                                    <installDirectory>${basedir}</installDirectory>
                                </configuration>
                            <executions>
                                    <execution>
                                            <id>server build</id>
                                            <phase>package</phase>
                                            <goals>
                                                <goal><%= clientPackageManager %></goal>
                                            </goals>
                                            <configuration>
                                                <workingDirectory>server</workingDirectory>
                                                <arguments>run build</arguments>
                                                <environmentVariables>
                                                    <APP_VERSION>${project.version}</APP_VERSION>
                                                </environmentVariables>
                <%_ if (clientPackageManager === 'yarn') { _%>
                                                <yarnInheritsProxyConfigFromMaven>false</yarnInheritsProxyConfigFromMaven>
                <%_ } else if (clientPackageManager === 'npm') { _%>
                                                <npmInheritsProxyConfigFromMaven>false</npmInheritsProxyConfigFromMaven>
                <%_ } _%>
                                            </configuration>
                                        </execution>
                            </executions>
                        </plugin>
                    </plugins>
             </build>
        </profile>
    </profiles>
</project>
